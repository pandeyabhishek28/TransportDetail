<Window x:Class="TransportDetail.Views.CompanyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TransportDetail.Views"
        mc:Ignorable="d"
        Title="CompanyDialog" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel>
                <Label Content="Company ID"></Label>
                <TextBox x:Name="_companyID"></TextBox>
                <Label Content="Company Name"></Label>
                <TextBox x:Name="_companyName"></TextBox>
            </StackPanel>
            <StackPanel>
                <Button x:Name="_okAction" Content="OK"></Button>
                <Button x:Name="_cancleAction" Content="Cancle"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
